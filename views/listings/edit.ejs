<%- layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"required/>
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Enter a valid Title</div>
        </div>
       
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required><%= listing.description %> </textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3">
          Original Listing Image <br>
          <img src="<%=transformedImageUrl %>" alt="img">
        </div>

        
        <div class="mb-3 form-label">
            <label for="image" class="form-label">Upload new image</label>
            <input name="listing[image]" class="form-control" type="file"/>
        </div>


        <div class="row">
            <div class="mb-3 form-label col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" class="form-control" value="<%= listing.price %>"required type="number"/>
            <div class="invalid-feedback">Price should be valid!</div>
            </div>
    
            <div class="mb-3 form-label col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" class="form-control" value=" <%= listing.country %>" required type="country"/>
            <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
       

        <div class="mb-3 form-label">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" class="form-control" value=" <%= listing.location %>" required/>
            <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</div>
</div>
<script src-="/js/script.js"></script>